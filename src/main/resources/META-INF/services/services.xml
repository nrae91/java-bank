<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="accountServiceImpl" class="org.academiadecodigo.javabank.services.AccountServiceImpl">
        <property name="accountDao" ref="jpaAccountDao"/>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="customerServiceImpl" class="org.academiadecodigo.javabank.services.CustomerServiceImpl">
        <property name="customerDao" ref="jpaCustomerDao"/>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="authServiceImpl" class="org.academiadecodigo.javabank.services.AuthServiceImpl">
        <property name="customerService" ref="customerServiceImpl"/>
    </bean>

</beans>